generator client {
    provider        = "prisma-client-js"
}

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    relationMode         = "prisma"
}

model Member {
    // Member first and last name, wallet address, country of residence, date, and email address
    id          Int       @id @default(autoincrement())
    first_name  String
    last_name   String
    wallet      String   @unique
    country     String
    email       String 
    date        DateTime @default(now())
    is_active   Boolean  @default(true)
    
    @@index([wallet], name: "wallet")
    @@index([is_active], name: "is_active")
}
